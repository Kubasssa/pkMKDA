<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistFinal">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="354dp"
        android:layout_height="fill_parent"
        android:layout_marginEnd="16dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Zostań FitFreakiem!"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Podaj imie:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Podaj hasło:"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/surnameInput"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Wybierz płeć"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="3dp"
                android:text="Wprowadz wartości!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.464"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Podaj obecną wagę(kg):"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/weightInput"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:ems="10"
                android:inputType="number"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="81dp"
                tools:layout_editor_absoluteY="75dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Podaj wzrost(cm):"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/heightInput"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:ems="10"
                android:inputType="number"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="72dp"
                tools:layout_editor_absoluteY="121dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Podaj wiek:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ageInput"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:ems="10"
                android:inputType="number"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="72dp"
                tools:layout_editor_absoluteY="167dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Podaj twoją aktywność:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="3dp"
                android:text="Wprowadz wartości!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.464"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Jak ma się zmienić twoja waga na przestrzeni miesiąca:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button"
                    android:layout_width="115dp"
                    android:layout_height="44dp"
                    android:text="-"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="454dp" />

                <TextView
                    android:id="@+id/diffInput"
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    tools:layout_editor_absoluteX="118dp"
                    tools:layout_editor_absoluteY="456dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="115dp"
                    android:layout_height="44dp"
                    android:text="+"
                    tools:layout_editor_absoluteX="280dp"
                    tools:layout_editor_absoluteY="454dp" />

            </TableRow>

            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dodaj"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="360dp" />

        </TableLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>