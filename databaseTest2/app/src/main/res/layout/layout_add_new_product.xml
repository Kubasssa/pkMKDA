    <EditText
        android:id="@+id/addNewProduct_input_name"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Product name"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="80dp"/>

    <EditText
        android:id="@+id/addNewProduct_input_portion"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Portion (grams)"
        android:layout_below="@id/addNewProduct_input_name"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/addNewProduct_input_calories"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Calories (kcal)"
        android:layout_below="@id/addNewProduct_input_portion"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/addNewProduct_input_carbs"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Carbs (grams)"
        android:layout_below="@id/addNewProduct_input_calories"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/addNewProduct_input_fat"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Fat (grams)"
        android:layout_below="@id/addNewProduct_input_carbs"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/addNewProduct_input_proteins"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Proteins (grams)"
        android:layout_below="@id/addNewProduct_input_fat"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/addNewProduct_button_add_to_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="61dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/back_button"
        android:text="Add"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/addNewProduct_button_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/back_button"
        android:text="Return"
        android:textColor="@android:color/white" />

