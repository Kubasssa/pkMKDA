<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <ImageView
            android:id="@+id/item_database_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:src="@drawable/ic_item"/>

        <TextView
            android:id="@+id/layout_item_database_text_top_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/layout_item_database_text_top"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/item_database_image"/>

        <TextView
            android:id="@+id/layout_item_database_text_bottom_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/layout_item_database_text_bottom"
            android:layout_below="@id/layout_item_database_text_top_id"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_toEndOf="@id/item_database_image"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/layout_item_database_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_eat"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>