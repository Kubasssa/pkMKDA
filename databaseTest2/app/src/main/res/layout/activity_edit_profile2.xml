<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="340dp"
        android:layout_height="fill_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Podaj obecną wagę(kg):"
                android:textSize="18sp"
                android:visibility="invisible" />


            <EditText
                android:id="@+id/weightInput"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="Actual weight"
                android:inputType="number"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="81dp"
                tools:layout_editor_absoluteY="75dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Podaj wzrost(cm):"
                android:textSize="18sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/heightInput"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="Actual height [cm]."
                android:inputType="number"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="72dp"
                tools:layout_editor_absoluteY="121dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:text="Your Activity:"
                android:textSize="13sp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="3dp"
                android:background="#ddd"
                android:text="Wprowadz wartości!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.464"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="How do you want to change yout weight over a month:"
                android:textSize="13sp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button"
                    android:layout_width="60dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/back_button"
                    android:text="-"
                    android:textColor="@android:color/white"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="454dp" />

                <TextView
                    android:id="@+id/diffInput"
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    tools:layout_editor_absoluteX="118dp"
                    tools:layout_editor_absoluteY="456dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="60dp"
                    android:layout_height="44dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/back_button"
                    android:text="+"
                    android:textColor="@android:color/white"
                    tools:layout_editor_absoluteX="280dp"
                    tools:layout_editor_absoluteY="454dp" />

            </TableRow>

            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/remove_button"
                android:text="Change"
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="360dp" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/remove_button"
                android:text="Back"
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="457dp" />

        </TableLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>