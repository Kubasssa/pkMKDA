<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_item_eaten"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">
    <ImageView
        android:id="@+id/eaten_product_index_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_item_eaten"/>

    <TextView
        android:id="@+id/eaten_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRODUCT NAME"
        android:layout_toRightOf="@+id/eaten_product_index_image"
        android:layout_centerVertical="true"

        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/delete_eaten_product"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_delete" />
</RelativeLayout>


</android.support.v7.widget.CardView>
